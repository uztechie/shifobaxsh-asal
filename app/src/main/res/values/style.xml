<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="RegisterInputDropdownStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="prefixTextColor">@color/white</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/black</item>
    </style>

    <style name="DropdownStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="cabinetTextStyle" parent="Theme.MaterialComponents">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="drawableTint">@color/white</item>
    </style>

    <style name="ToolbarButton" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
    </style>

    <style name="roundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

</resources>