<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:padding="8dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:padding="8dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/main_adapter_image"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:src="@color/teal_200"
            android:scaleType="fitCenter"/>

        <TextView
            android:textColor="@color/black"
            android:id="@+id/main_adapter_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Super Asal"
            android:layout_marginTop="8dp"/>

        <TextView
            android:textColor="@color/black"
            android:id="@+id/main_adapter_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Desc"
            android:layout_marginTop="4dp"/>


        <RelativeLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/main_adapter_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$ 25.6"
                android:layout_toLeftOf="@id/main_adapter_cart"
                android:textSize="16sp"
                android:textColor="@color/teal_200"/>

            <ImageView
                android:id="@+id/main_adapter_cart"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_cart_stroke"
                app:tint="@color/teal_200"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>